{
	// For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Frontend",
			"type": "npm",
			"script": "dev",
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"pattern": "$tsc",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "(.*?)"
					},
					"endsPattern": {
						"regexp": "bundle generation complete"
					}
				}
			}
		},
		{
			"label": "Start Backend",
			"type": "shell",
			"command": "npm run start:debug",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"group": "groupA"
			},
			"problemMatcher": []
		},
		{
			"label": "Start Both",
			"dependsOn": ["Start Frontend", "Start Backend"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "test",
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"pattern": "$tsc",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "(.*?)"
					},
					"endsPattern": {
						"regexp": "bundle generation complete"
					}
				}
			}
		}
	]
}
